<%= form_with(model: pessoa, class: "contents") do |form| %>
  <% if pessoa.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(pessoa.errors.count, "error") %> prohibited this pessoa from being saved:</h2>

      <ul>
        <% pessoa.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container bg-white shadow p-4 mt-4">

      <p class="w-full py-2 text-sm text-gray-700">Dados Pessoais</p>

      <hr class="w-full" />

      <div class="flex flex-wrap -mx-3 mb-6">

        <div class="w-full px-3  md:w-2/4">
          <%= form.label :nome, class: "text-xs" %>
          <%= form.text_field :nome, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-full px-3  md:w-2/4">
          <%= form.label :sobrenome, class: "text-xs" %>
          <%= form.text_field :sobrenome, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

      </div>

      <div class="flex flex-wrap -mx-3 mb-6">

        <div class="w-full px-3  md:w-4/12">
          <%= form.label :genero, class: "text-xs" %>
          <%= form.select :genero, ["Masculino","Feminino"], { prompt: "Selecione..." }, { class: "orm-select appearance-none
          block
          w-full
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding bg-no-repeat
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          m-0
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" } %>
        </div>

        <div class="w-full px-3  md:w-4/12">
          <%= form.label :estado_civil, class: "text-xs" %>
          <%= form.select :estado_civil, ["Solteiro(a)","Casado(a)", "Divorciado(a)","Viúvo(a)","Outros"], { prompt: "Selecione..." }, { class: "orm-select appearance-none
          block
          w-full
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding bg-no-repeat
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          m-0
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" } %>
        </div>

        <div class="w-full px-3  md:w-4/12">
          <%= form.label :grau_parentesco, class: "text-xs" %>
          <%= form.select :grau_parentesco, ["Esposo(a)","Filho(a)","Neto(a)"], { prompt: "Selecione..." }, { class: "orm-select appearance-none
          block
          w-full
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding bg-no-repeat
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          m-0
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" } %>
        </div>                

      </div>

  </div>

  <div class="container bg-white shadow p-4 mt-4">

      <p class="w-full py-2 text-sm text-gray-700">Dados de Contato</p>

      <hr class="w-full" />

      <div class="flex flex-wrap -mx-3 mb-6">  

      <div class="w-full px-3  md:w-3/12">
          <%= form.label :telefone, class: "text-xs" %>
          <%= form.text_field :telefone, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-full px-3  md:w-3/12">
          <%= form.label :celular, class: "text-xs" %>
          <%= form.text_field :celular, class: "block shadow rounded-md border-1 text-gray-700 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-full px-3  md:w-6/12">
          <%= form.label :email, class: "text-xs" %>
          <%= form.text_field :email, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

      </div>

  </div>

  <div class="container bg-white shadow p-4 mt-4">

    <p class="w-full py-2 text-sm text-gray-700">Dados de Endereço</p>

    <hr class="w-full" />

    <div class="flex flex-wrap -mx-3 mb-6">  

        <div class="w-full px-3  md:w-8/12">
          <%= form.label :logradouro, class: "text-xs" %>
          <%= form.text_field :logradouro, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-full px-3  md:w-2/12">
          <%= form.label :numero, class: "text-xs" %>
          <%= form.text_field :numero, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-full px-3  md:w-2/12">
          <%= form.label :complemento, class: "text-xs" %>
          <%= form.text_field :complemento, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

    </div>

    <div class="flex flex-wrap -mx-3 mb-6">

        <div class="w-full px-3  md:w-4/12">
          <%= form.label :bairro, class: "text-xs" %>
          <%= form.text_field :bairro, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-full px-3  md:w-4/12">
          <%= form.label :cidade, class: "text-xs" %>
          <%= form.text_field :cidade, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

        <div class="w-full px-3  md:w-2/12">
          <%= form.label :estado, class: "text-xs" %>
          <%= form.select :estado, ["RJ","SP","MG","ES"], {prompt: "Selecione"}, { class: "orm-select appearance-none
          block
          w-full
          px-3
          py-2
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding bg-no-repeat
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          mt-2
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" } %>
        </div>

        <div class="w-full px-3  md:w-2/12">
          <%= form.label :cep, class: "text-xs" %>
          <%= form.text_field :cep, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
        </div>

    </div>

  </div>


  <div class="container bg-white shadow p-4 mt-4">

    <p class="w-full py-2 text-sm text-gray-700">Datas</p>

    <hr class="w-full" />

    <div class="flex flex-wrap -mx-3 mb-6"> 

      <div class="w-full px-3  md:w-4/12">
        <%= form.label :data_nascimento, class: "text-xs" %>
        <%= form.date_field :data_nascimento, class: "block shadow text-gray-700 rounded-md border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="w-full px-3  md:w-4/12">
        <%= form.label :data_falecimento, class: "text-xs" %>
        <%= form.date_field :data_falecimento, class: "block shadow text-gray-700 rounded-md border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="w-full px-3  md:w-4/12">
        <%= form.label :data_batismo, class: "text-xs" %>
        <%= form.date_field :data_batismo, class: "block shadow text-gray-700 rounded-md border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

    </div>

  </div>

  <div class="container bg-white shadow p-4 mt-4">

    <p class="w-full py-2 text-sm text-gray-700">Anotações</p>

    <hr class="w-full" />

    <div class="flex flex-wrap -mx-3 mb-6"> 

      <div class="w-full px-3">
        <%= form.label :bio, class: "text-xs" %>
        <%= form.text_area :bio, rows: 4, class: "block shadow rounded-md text-gray-700 border-1 border-gray-300 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

    </div>

  </div>

  <div class="container bg-white shadow p-4 mt-4">
    <div class="my=5">
      <%= form.label :imagem %>
      <%= form.file_field :imagem, multiple: false %> 
    </div> 

    <div class="my=5">
      <% if pessoa.imagem.attached? %>
          <%= image_tag(pessoa.imagem, class: 'w-64 h-auto block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2') %>
      <% end %>        
    </div>   
  </div>
  
  <div class="my-6">
    <%= form.submit "Salvar", class: "rounded-lg py-3 px-5 bg-blue-600 text-sm text-white inline-block font-medium cursor-pointer" %>
  </div>

<% end %>
