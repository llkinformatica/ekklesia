  <%= render 'shared/localiza_pessoa' %>
  
  <div class="flex justify-between h-16 content-center items-center">
    <p class="w-full py-2 mx-4 text-lg text-gray-700">Listagem das pessoas</p>
    <a href='pessoas/new' class="w-[50px] mr-8">
