    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-0 sm:gap-4">
        <%= render @pessoas %>
    </div></ul>
</div>

<div class="max-w-content flex flex-row flex-no-wrap my-5 mx-10 text-xs text-gray-700">
   <%== pagy_nav(@pagy) %>
</div>

</div>
</div>
